<?xml version="1.0" encoding="utf-8"?>
<layer-list android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="top" >

        <rotate android:pivotX="50%" android:fromDegrees="45" android:toDegrees="45"
            android:pivotY="50%">
            <shape android:shape="rectangle" >
                <solid android:color="@color/colorPrimary"/>
                <size android:height="100dp" android:width="100dp"/>

            </shape>
        </rotate>

    </item>
    <item android:top="25dp">

        <rotate android:pivotX="50%" android:fromDegrees="0" android:toDegrees="0"
            android:pivotY="50%">
            <shape android:shape="oval">
                <solid android:color="@color/colorPrimary"/>
                <size android:height="100dp" android:width="100dp"/>
            </shape>

        </rotate>

    </item>

</layer-list>